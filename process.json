{
    "apps": {
        "name": "koa_api",                          
        "script": "./bin/www",                      
        "cwd": "./",                               
        "args": "",                                
        "interpreter": "",                         
        "interpreter_args": "",                   
        "watch": true,                            
        "ignore_watch": [                           
            "node_modules",
            "logs"
        ],
        "exec_mode": "cluster_mode",               
        "instances": 4,                             
        "max_memory_restart": 8,                     
        "merge_logs": true,                        
        "log_date_format": "YYYY-MM-DD HH:mm:ss",  
        "min_uptime": "60s",                       
        "max_restarts": 30,                      
        "autorestart": true,                        
        "cron_restart": "",                         
        "restart_delay": "60s",                     
        "env_prod": {
           "NODE_ENV": "production"           
        },
        "env_dev": {
            "NODE_ENV": "development"            
        }
       
    }
}